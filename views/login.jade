extends layout

block content
    #messages.none
        #message
            #error.none= lingua.error
            #errorlogin.none= lingua.errorlogin
            #errorname.none= lingua.errorname
            #errorexist.none= lingua.errorexist
            #regsuccess.none= lingua.regsuccess
        #message-footer
            input#message-ok.linkbutton.black(type='button', value= lingua.ok)
    #menu.black.menubar
        #menu-logo
        #menu-title= lingua.title
        #menu-items
            a#m-login.menulink(href='#')= lingua.login
            a#m-register.menulink(href='#')= lingua.register
    #login.screen.none
        include includes/login
    #register.screen.none
        include includes/register
    script(src='javascripts/login.js')
