extends layout

block content
    h1= lingua.title
    h2= lingua.settings
    form.box.brown2(method='post', action='/settings')
        p= lingua.lang
        select.input(name='langselect')
            if lang == 'en'
                option#en(value='en', selected) English
            else
                option#en(value='en') English
            if lang == 'fr'
                option#fr(value='fr', selected) Français
            else
                option#fr(value='fr') Français
        p: input.linkbutton.black(type='submit', value= lingua.apply)
    p: a.linkbutton.black(href='/')= lingua.back
